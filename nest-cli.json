{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/app/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/app/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/app",
  "projects": {
    "app": {
      "type": "application",
      "root": "apps/app",
      "entryFile": "main",
      "sourceRoot": "apps/app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/app/tsconfig.app.json"
      }
    },
    "core": {
      "type": "library",
      "root": "libs/core",
      "entryFile": "index",
      "sourceRoot": "libs/core/src",
      "compilerOptions": {
        "tsConfigPath": "libs/core/tsconfig.lib.json"
      }
    },
    "cache": {
      "type": "library",
      "root": "libs/cache",
      "entryFile": "index",
      "sourceRoot": "libs/cache/src",
      "compilerOptions": {
        "tsConfigPath": "libs/cache/tsconfig.lib.json"
      }
    },
    "database-typeorm": {
      "type": "library",
      "root": "libs/database-typeorm",
      "entryFile": "index",
      "sourceRoot": "libs/database-typeorm/src",
      "compilerOptions": {
        "tsConfigPath": "libs/database-typeorm/tsconfig.lib.json"
      }
    },
    "bullmq": {
      "type": "library",
      "root": "libs/bullmq",
      "entryFile": "index",
      "sourceRoot": "libs/bullmq/src",
      "compilerOptions": {
        "tsConfigPath": "libs/bullmq/tsconfig.lib.json"
      }
    }
  }
}